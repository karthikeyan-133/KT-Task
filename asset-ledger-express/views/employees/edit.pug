extends ../layout

block content
  .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
    h1.h2 Edit Employee

  .card
    .card-header
      h5.mb-0 Employee Details
    .card-body
      form(action=`/employees/${employee.id}`, method='POST')
        input(type='hidden', name='_method', value='PUT')
        .row
          .col-md-6
            .mb-3
              label(for='employee_code', class='form-label') Employee Code *
              input(type='text', class='form-control', id='employee_code', name='employee_code', value=employee.employee_code, required)
          .col-md-6
            .mb-3
              label(for='full_name', class='form-label') Full Name *
              input(type='text', class='form-control', id='full_name', name='full_name', value=employee.full_name, required)
        
        .row
          .col-md-6
            .mb-3
              label(for='email', class='form-label') Email
              input(type='email', class='form-control', id='email', name='email', value=employee.email || '')
          .col-md-6
            .mb-3
              label(for='phone', class='form-label') Phone
              input(type='text', class='form-control', id='phone', name='phone', value=employee.phone || '')
        
        .row
          .col-md-6
            .mb-3
              label(for='designation', class='form-label') Designation
              input(type='text', class='form-control', id='designation', name='designation', value=employee.designation || '')
          .col-md-6
            .mb-3
              label(for='department', class='form-label') Department
              input(type='text', class='form-control', id='department', name='department', value=employee.department || '')
        
        .row
          .col-md-6
            .mb-3
              label(for='branch_id', class='form-label') Branch
              select(class='form-select', id='branch_id', name='branch_id')
                option(value='') Select Branch
                if branches && branches.length > 0
                  each branch in branches
                    option(value=branch.id, selected=(employee.branch_id === branch.id ? true : false))= branch.name
          .col-md-6
            .mb-3
              label(for='is_active', class='form-label') Status
              select(class='form-select', id='is_active', name='is_active')
                option(value='true', selected=employee.is_active) Active
                option(value='false', selected=!employee.is_active) Inactive
        
        .d-flex.justify-content-between
          a.btn.btn-secondary(href='/employees') Cancel
          button(type='submit', class='btn.btn-primary') Update Employee